<h2>Cocktails list</h2>
<p><%= @cocktail.name %></p>

<div class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %></li>
    <%= link_to "Remove ingredients", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Remove a cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
  <%= link_to "Back to cocktails list", cocktails_path(@cocktail) %>
</div>


